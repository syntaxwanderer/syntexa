#!/usr/bin/env php
<?php

declare(strict_types=1);

/**
 * Syntexa Framework CLI
 * 
 * This file serves as the entry point for all Syntexa console commands.
 * It initializes the Symfony Console application and registers all framework commands.
 */

// Load Composer autoloader
require_once __DIR__ . '/../vendor/autoload.php';

// Initialize Discovery system (essential for Attributes, Entities, and Modules)
use Syntexa\Core\Discovery\AttributeDiscovery;
AttributeDiscovery::initialize();

// Create and run the Symfony Console application
use Syntexa\Core\Console\Application;

$application = new Application();
$application->run();
