{
    "name": "syntexa/framework",
    "description": "A modern PHP framework with proper separation of concerns and runtime module loading",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Taras Hanych",
            "email": "taras.ganych@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "./packages/syntexa/*"
        }
    ],
    "require": {
        "php": "^8.4",
        "php-di/php-di": "^7.1",
        "symfony/console": "^7.3",
        "symfony/process": "^7.3",
        "syntexa/module-orm": "*",
        "syntexa/module-user-api": "*",
        "syntexa/module-user-frontend": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5"
    },
  "autoload": {
        "psr-4": {
            "Syntexa\\Core\\": "vendor/syntexa/core/src/",
            "Syntexa\\Orm\\": "vendor/syntexa/orm/src/",
            "Syntexa\\Modules\\": "src/modules/",
            "Syntexa\\Infrastructure\\": "src/infrastructure/",
            "Syntexa\\UserDomain\\": "packages/syntexa/user-domain/src/",
            "Syntexa\\UserFrontend\\": "packages/syntexa/user-frontend/src/",
            "Acme\\Marketing\\": "packages/acme/module-user-marketing/src/",
            "Syntexa\\Tests\\": "tests/"
    },
    "exclude-from-classmap": [
      "vendor/twig/twig/src/Test/"
    ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
