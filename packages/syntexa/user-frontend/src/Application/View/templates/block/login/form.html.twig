<div class="uk-margin-bottom">
  <h2 class="uk-heading-line"><span>{{ heading|default('Sign in') }}</span></h2>
</div>
<form method="POST" action="/login" class="uk-form-stacked uk-margin">
  <div class="uk-margin">
    <label class="uk-form-label" for="login-email">Email</label>
    <div class="uk-form-controls">
      <input class="uk-input" id="login-email" type="email" name="email" placeholder="you@example.com" required value="{{ request.email|default('') }}">
    </div>
  </div>
  <div class="uk-margin">
    <label class="uk-form-label" for="login-password">Password</label>
    <div class="uk-form-controls">
      <input class="uk-input" id="login-password" type="password" name="password" placeholder="••••••••" required>
    </div>
  </div>
  <div class="uk-margin uk-flex uk-flex-middle uk-flex-between">
    <label><input class="uk-checkbox" type="checkbox" name="remember"> Remember me</label>
    <a href="#" class="uk-link-muted">Forgot password?</a>
  </div>
  <button class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-top" type="submit">
    Sign in
  </button>
</form>


