{% extends '@user-frontend/frame/base.html.twig' %}

{% block title %}{{ title|default('Dashboard') }}{% endblock %}

{% block body %}
<div class="uk-container uk-container-large uk-margin-top">
    <div class="uk-card uk-card-default uk-card-body">
        <h1 class="uk-card-title">Dashboard</h1>
        
        <div class="uk-alert-success" uk-alert>
            <p>Welcome, <strong>{{ user.name|default(user.email) }}</strong>! You are successfully logged in.</p>
        </div>

        <div class="uk-grid-small uk-child-width-1-3@s" uk-grid>
            <div>
                <div class="uk-card uk-card-primary uk-card-body">
                    <h3 class="uk-card-title">User ID</h3>
                    <p>{{ user.id }}</p>
                </div>
            </div>
            <div>
                <div class="uk-card uk-card-secondary uk-card-body">
                    <h3 class="uk-card-title">Email</h3>
                    <p>{{ user.email }}</p>
                </div>
            </div>
            <div>
                <div class="uk-card uk-card-default uk-card-body">
                    <h3 class="uk-card-title">Actions</h3>
                    <a href="/logout" class="uk-button uk-button-danger">Logout</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

