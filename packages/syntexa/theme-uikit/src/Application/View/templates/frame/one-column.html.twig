{% extends '@theme-uikit/frame/base.html.twig' %}

{% block body %}
  <div class="uk-section uk-section-default">
    <div class="uk-container uk-container-small">
      <header class="uk-margin-bottom">
        {% block header %}
          <h1 class="uk-heading-small">{{ heading|default(title|default('Syntexa')) }}</h1>
        {% endblock %}
      </header>
      <div class="uk-card uk-card-default uk-card-body">
        {% block main %}
          {{ main|default(content|default(''))|raw }}
        {% endblock %}
      </div>
    </div>
  </div>
{% endblock %}

