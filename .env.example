# Environment: dev, test, prod
APP_ENV=dev

# Debug mode: 1 for development, 0 for production
APP_DEBUG=1

# Application name
APP_NAME="Syntexa Framework"

# Server configuration
APP_HOST=localhost
APP_PORT=8000
SWOOLE_PORT=9501

# Swoole server configuration
SWOOLE_HOST=0.0.0.0
SWOOLE_WORKER_NUM=4
SWOOLE_MAX_REQUEST=10000
SWOOLE_MAX_COROUTINE=100000
SWOOLE_LOG_FILE=var/log/swoole.log
SWOOLE_LOG_LEVEL=1

# CORS Configuration
CORS_ALLOW_ORIGIN=*
CORS_ALLOW_METHODS=GET, POST, PUT, DELETE, OPTIONS
CORS_ALLOW_HEADERS=Content-Type, Authorization
CORS_ALLOW_CREDENTIALS=false

# RabbitMQ Configuration
RABBITMQ_HOST=127.0.0.1
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Queue Configuration
SYN_QUEUE_TRANSPORT=rabbitmq

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=syntexa
DB_USER=postgres
DB_PASSWORD=your_password
DB_CHARSET=utf8
DB_POOL_SIZE=10

# ============================================
# Blockchain Configuration
# ============================================
# Enable blockchain (auto-enabled if multiple participants configured)
BLOCKCHAIN_ENABLED=true

# Blockchain Database (Separate from application DB)
BLOCKCHAIN_DB_HOST=localhost
BLOCKCHAIN_DB_PORT=5433
BLOCKCHAIN_DB_NAME=syntexa_node1_blockchain
BLOCKCHAIN_DB_USER=postgres
BLOCKCHAIN_DB_PASSWORD=your_password

# Blockchain Node Configuration
BLOCKCHAIN_NODE_ID=node1
BLOCKCHAIN_PARTICIPANTS=node1,node2

# RabbitMQ Configuration (for distributed blockchain)
# Production: Use /production vhost
# Tests: Use /test vhost (configured in docker-compose.test.yml)
BLOCKCHAIN_RABBITMQ_HOST=localhost
BLOCKCHAIN_RABBITMQ_PORT=5672
BLOCKCHAIN_RABBITMQ_USER=syntexa
BLOCKCHAIN_RABBITMQ_PASSWORD=your_password
BLOCKCHAIN_RABBITMQ_VHOST=/production
BLOCKCHAIN_RABBITMQ_EXCHANGE=syntexa_blockchain

# Blockchain Consensus Parameters
BLOCKCHAIN_BLOCK_SIZE=100
BLOCKCHAIN_BLOCK_TIME_LIMIT=10
BLOCKCHAIN_MEMPOOL_MAX_SIZE=10000
BLOCKCHAIN_PROPOSER_INTERVAL=5
BLOCKCHAIN_CONSENSUS_TIMEOUT=30
