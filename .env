# Environment: dev, test, prod
APP_ENV=dev

# Debug mode: 1 for development, 0 for production
APP_DEBUG=1

# Application name
APP_NAME="Syntexa Framework"

# Server configuration
APP_HOST=localhost
APP_PORT=8000
SWOOLE_PORT=9501

# Swoole server configuration
SWOOLE_HOST=0.0.0.0
SWOOLE_WORKER_NUM=4
SWOOLE_MAX_REQUEST=10000
SWOOLE_MAX_COROUTINE=100000
SWOOLE_LOG_FILE=var/log/swoole.log
SWOOLE_LOG_LEVEL=1

# CORS Configuration
CORS_ALLOW_ORIGIN=*
CORS_ALLOW_METHODS=GET, POST, PUT, DELETE, OPTIONS
CORS_ALLOW_HEADERS=Content-Type, Authorization
CORS_ALLOW_CREDENTIALS=false

# RabbitMQ Configuration
RABBITMQ_HOST=127.0.0.1
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Queue Configuration
SYN_QUEUE_TRANSPORT=rabbitmq
DB_HOST=postgres-app
DB_PORT=5437
DB_NAME=syntexa
DB_USER=syntexa_user
DB_PASSWORD=syntexa123
DB_CHARSET=utf8
DB_POOL_SIZE=10

# ============================================
# Blockchain Configuration
# ============================================
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_DB_HOST=postgres-node1-blockchain
