BLOCKCHAIN_DB_NAME=syntexa_node1_blockchain
BLOCKCHAIN_DB_USER=syntexa_user
BLOCKCHAIN_DB_PASSWORD=syntexa123
BLOCKCHAIN_NODE_ID=node1
BLOCKCHAIN_PARTICIPANTS=blockchain-server,shop1,shop2
BLOCKCHAIN_RABBITMQ_HOST=rabbitmq
